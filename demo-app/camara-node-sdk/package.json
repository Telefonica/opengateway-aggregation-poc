{
  "name": "camara-node-sdk",
  "version": "1.0.0",
  "description": "Public SDK used by applications to operate with the OpenGateway platform.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "npm run prepare",
    "preprepare": "rm -rf dist",
    "prepare": "tsc -p tsconfig-esm.json && tsc -p tsconfig-cjs.json",
    "format": "prettier --write ."
  },
  "files": [
    "dist"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    "./clients/*": {
      "import": {
        "types": "./dist/esm/clients/*.d.ts",
        "default": "./dist/esm/clients/*.js"
      },
      "require": {
        "types": "./dist/cjs/clients/*.d.ts",
        "default": "./dist/cjs/clients/*.js"
      }
    },
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "dependencies": {
    "axios": "^1.3.5",
    "lru-cache": "^9.1.1",
    "memoizee": "^0.4.15",
    "node-jose": "^2.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@tsconfig/esm": "^1.0.3",
    "@tsconfig/node18": "^2.0.0",
    "@types/memoizee": "^0.4.8",
    "@types/node": "^18.15.11",
    "@types/node-jose": "^1.1.10",
    "@types/uuid": "^9.0.1",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 120,
    "tabWidth": 2,
    "semi": true
  }
}
